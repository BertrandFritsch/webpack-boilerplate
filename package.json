{
  "name": "webpack-boilerplate",
  "version": "0.0.1",
  "description": "GitHub explorer demo",
  "main": "src/index.tsx",
  "repository": "https://github.com/bertrandfritsch/webpack-boilerplate",
  "author": "Bertrand Fritsch (bertrand.fritsch.in@gmail.com)",
  "license": "MIT",
  "sideEffects": false,
  "keywords": [
    "webpack",
    "react",
    "scss",
    "typescript",
    "graphql"
  ],
  "scripts": {
    "dev": "webpack serve --env NODE_ENV=development --config ./config/webpack.dev.js",
    "prod": "webpack --env NODE_ENV=production --config ./config/webpack.prod.js",
    "tsc:check": "tsc --noEmit --pretty",
    "lint": "eslint --max-warnings 0 \"{src,features}/**/*.{ts,tsx}\"",
    "test": "cucumber-js",
    "test:cov": "nyc --include 'src/components/**/*.{ts,tsx}' --reporter 'lcov' --reporter 'text-summary' yarn test"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
